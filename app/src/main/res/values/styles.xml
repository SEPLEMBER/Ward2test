<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовая тема приложения: NoActionBar, фон тёмный -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#0A0A0A</item>
        <item name="android:colorBackground">#0A0A0A</item>
        <!-- текстовые цвета будут контролироваться в разметке -->
    </style>

    <!-- Прозрачная тема для Settings (как в манифесте было указано) -->
    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
